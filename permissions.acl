/**
 * Access control rules for supplychain
 */
rule AllAccess {
	description: "All companies should be able to read components of the network"
	participant: "org.hyperledger.composer.system.Participant"
	operation: ALL
	resource: "org.hyperledger.composer.system.**"
	action: ALLOW  
}

rule AllAccessPaper {
	description: "Anyone can do anything"
	participant: "fabric.ibm.commercialpaper.Company"
	operation: ALL
	resource: "fabric.ibm.commercialpaper.**"
	action: ALLOW
}